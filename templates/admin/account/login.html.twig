{% extends 'base.html.twig' %}

{% block title %}Connexion a l'administration{% endblock %}

{% block body %}
   <div class="container_connexion wrapper">
    <div class="container">
                <h1 class="text_black hight_title">Connexion à l'administration</h1>
                {# gestion des erreurs #}
                {% if hasError %}
                    <div class="danger_red">
                        Une erreur est survenue, le nom d'utilisateur ou le mot de passe est invalide
                    </div>
                {% endif %}
                <form action="{{ path('admin_account_login')}}" method="POST">
                    <div class="connexion_line">
                        {# symfony veut un nome précis pour le login: _username #}
                        
                        <input type="text" name="_username" id="email" class="" placeholder="Votre adresse mail" required value="{{ username }}">
                    </div>
                    <div class="connexion_line">
                        {# symfony veut un nome précis pour le password: _password #}
                        
                        <input type="password" name="_password" id="password" class="" placeholder="Votre mot de passe" required>
                    </div>
                   <div class="connexion_line">
                        <button type="submit" class="button_connexion">Connexion</button>
                    </div>
                </form>
                </div>
                </div>
{% endblock %}