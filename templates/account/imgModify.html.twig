{% extends 'base.html.twig' %}

{% block title %}{% trans %}Edit your avatar{% endtrans %}{% endblock %}
{% block body %}
    <div class="container_global_input wrapper">
        <h1 class="hight_title text_black">{% trans %}Changing the avatar of{% endtrans %} {{app.user.fullName}}</h1>
        <div class="center_input">
        {% if app.user.picture %}
                <img class="size_img_profile" src="/uploads/{{ app.user.picture }}" alt="{% trans %}Avatar of{% endtrans %}{{app.user.fullName}}">
                {% else %}
                <img class="size_img_profile anonyme_profile" src="/images/anonyme_profile.svg" alt="{% trans %}Avatar of{% endtrans %} {{app.user.fullName}}">
                {% endif %}
        {{form_start(myForm)}}

        {{form_widget(myForm)}}
            <button type="submit" class="button_connexion">{% trans %}Confirm avatar change{% endtrans %}</button>
        {{form_end(myForm)}}
    </div>
    </div>
{% endblock %}