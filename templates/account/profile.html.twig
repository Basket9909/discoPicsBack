{% extends 'base.html.twig' %}

{% block title %}{% trans %}Profile of{% endtrans %} {{user.fullName}}{% endblock %}

{% block body %}
    <div class="container_profile wrapper">
        <a href="{{ path("new_publication") }}">
            <div class="button margin_button">
                <p><i class="fa-solid fa-plus"></i> | {% trans %}Add spot{% endtrans %}</p>
            </div>
        </a>

        <h1 class="hight_title text_black">{% trans %}Your personal information{% endtrans %}</h1>

        <div class="personal_infos_container">
            <div class="picture_container">
                {% if user.picture %}
                <img src="/uploads/{{ user.picture }}" alt="{% trans %}Avatar of{% endtrans %} {{user.fullName}}">
                {% else %}
                <img class="anonyme_profile" src="/images/anonyme_profile.svg" alt="{% trans %}Avatar of{% endtrans %} {{user.fullName}}">
                {% endif %}
                
                <a href="{{ path('profile_img_modify') }}">
                    <div class="button margin_button">
                        <p><i class="fa-solid fa-user"></i> | {% trans %}Change your profile picture{% endtrans %}</p>
                    </div>
                </a>

                 {% if user.picture %}
                <a href="{{ path('profile_img_delete') }}">
                    <div class="button margin_button">
                        <p><i class="fa-solid fa-user"></i> | {% trans %}Delete your profile picture{% endtrans %}</p>
                    </div>
                </a>
                {% endif %}
                
            </div>
            <div class="personal_infos">
                <h2 class="hight_title">{{user.firstName|capitalize}} {{user.lastName|capitalize}}</h2>
                <h3 class="middle_title"><i class="fa-solid fa-cake-candles"></i> : {{user.bird | date("d / m / Y") }}</h3>
                <h3 class="middle_title"><i class="fa-solid fa-envelope"></i> : {{user.mail}}</h3>
                {% if user.instalink %}
                <h3 class="middle_title"><i class="fa-brands fa-instagram"></i> : {{user.instalink}} <a class="arrow_right_link" href="https://www.instagram.com/{{user.instaLink}}" target="_BLANK"><i class="fa-solid fa-arrow-right"></i></a></h3>
                {% endif %}
                <a href="{{ path('profile_modify') }}">
                    <div class="button margin_button">
                        <p><i class="fa-solid fa-info"></i> | {% trans %}Modify your information{% endtrans %}</p>
                    </div>
                </a>
                <a href="{{ path('password_modify')}}">
                    <div class="button margin_button">
                        <p><i class="fa-solid fa-lock"></i> | {% trans %}Change your password{% endtrans %}</p>
                    </div>
                </a>
            </div>
        </div>
        </div>
{% endblock %}