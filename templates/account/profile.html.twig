{% extends 'base.html.twig' %}

{% block title %}profil de {{user.fullName}}{% endblock %}

{% block body %}
    <div class="container_profile wrapper">
        <a href="#">
            <div class="button margin_button">
                <p>Ajouter un spot</p>
            </div>
        </a>

        <h1 class="hight_title text_black">Vos informations personelles</h1>

        <div class="personal_infos_container">
            <div class="picture_container">
                <img src="/uploads/{{ user.picture }}" alt="{{user.fullName}}">
                <a href="#">
                    <div class="button margin_button">
                        <p>Modifier votre photo de profil</p>
                    </div>
                </a>
                <a href="#">
                    <div class="button margin_button">
                        <p>Supprimer votre photo de profil</p>
                    </div>
                </a>
            </div>
            <div class="personal_infos">
                <h2>{{user.firstName|capitalize}} {{user.lastName|capitalize}}</h2>
                <h3>{{user.bird | date("d / m / Y") }}</h3>
                <h3>{{user.mail}}</h3>
                <h3>{{user.instalink}}</h3>
                <a href="#">
                    <div class="button margin_button">
                        <p>Modifier vos informations</p>
                    </div>
                </a>
                <a href="{{ path('password_modify')}}">
                    <div class="button margin_button">
                        <p>Modifier votre mot de passe</p>
                    </div>
                </a>
            </div>
        </div>
        <h1>Vos spots</h1>
    </div>
{% endblock %}